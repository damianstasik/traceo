{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // "composite": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "dom.iterable"],
    "isolatedModules": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["./src", "../../../shared"],
    "paths": {
      "@shared/*": ["../../../shared/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "../../../shared/*"]
}
