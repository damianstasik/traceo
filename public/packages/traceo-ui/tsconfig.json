{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "incremental": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
